<h1 class="text-center mt-4">Log in</h1>

<div class="container-fluid">
  <div class='row justify-content-center'>
    <div class='col-10 col-sm-9 col-md-8'>
      <%= form_for(:session, :html => {class: "shadow p-3 mb-3 bg-dark rounded", role: "form"}, url: login_path) do |f| %>
        <div class="form-group row">
          <div class="control-label col-md-2 col-xs-2 text-light">
            <%= f.label :email %>
          </div>
          <div class="col-md-10 col-xs-6">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="control-label col-md-2 col-xs-2 text-light">
            <%= f.label :password %>
          </div>
          <div class="col-md-10 col-xs-6">
            <%= f.password_field :password, class: "form-control shadow rounded", autocomplete: "off" %>
          </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-md mx-auto d-block" %>
        </div>
      <% end %>
      <div class="row mb-3 justify-content-center">
        [ <%= link_to "Cancel and return to articles listing", articles_path, class: "text-dark" %> ]
      </div>
    </div>
  </div>
</div>
