
<div class="container-fluid">
<div class='row justify-content-center'>
  <div class='col-10 col-sm-9 col-md-8'>
    <%= render 'shared/errors', obj: @user %>
    <%= form_for(@user, :html => {class: "shadow p-3 mb-3 bg-dark rounded", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-2 col-xs-2 text-light">
          <%= f.label :username %>
        </div>
        <div class="col-md-10 col-xs-6">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-2 col-xs-2 text-light">
          <%= f.label :email %>
        </div>
        <div class="col-md-10 col-xs-6">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-2 col-xs-2 text-light">
          <%= f.label :password %>
        </div>
        <div class="col-md-10 col-xs-6">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
        </div>
      </div>
      <div class="row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-md mx-auto d-block") %>
      </div>
    <% end %>
    <div class="row mb-3 justify-content-center">
      [ <%= link_to "Cancel and return to articles listing", articles_path, class: "text-dark" %> ]
    </div>
  </div>
</div>
</div>
