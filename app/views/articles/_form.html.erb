<div class="container-fluid">
  <!-- <div class="row justify-content-center"> -->
    <!-- <div class="col-10"> -->
    <section class="row justify-content-center">
      <section class="col-10 col-sm-9 col-md-8">
        <%= render 'shared/errors', obj: @article %>
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded",  local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-md-2 col-xs-2  col-form-label text-light" %>
            <div class="col-md-10 col-xs-6">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title"  %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :description, class: "col-md-2 col-xs-2 col-form-label text-light" %>
            <div class="col-md-10 col-xs-6 ">
              <%= f.text_area :description, rows: 7, class: "form-control shadow rounded", placeholder: "Description" %>
            </div>
          </div
          <div class="row justify-content-center">
              <%= f.submit class: "btn btn-outline-light btn-md mx-auto d-block" %>
          </div>

        <% end %>


        <div class="row m-3 justify-content-center">
          <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-dark" %>
        </div>
      </section>
    </section>
    <!-- </div> -->
  </div>
