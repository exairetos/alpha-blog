<h1 class="text-center mt-4">Create new category</h1>


<div class="container">
<div class='row justify-content-center'>
  <div class='col-10'>
    <%= render 'shared/errors', obj: @category %>
    <%= form_for(@category, :html => {class: "shadow p-3 mb-3 bg-dark rounded", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-2 text-light">
          <%= f.label :name %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Category name", autofocus: true %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <div class="">
          <%= f.submit "Create", class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="row mb-3 justify-content-center">
      [ <%= link_to "Cancel and return to articles listing", articles_path, class: "text-dark" %> ]
    </div>
  </div>
</div>
</div>
